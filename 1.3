#include <stdio.h>
int main()
{
    int x;
    scanf("%d", &x);
    int a = 1, b = 2, t;
    while (a <= x)
    {
        t = a + b;
        a = b;
        b = t;
    }
    t = b - a;
    b = a;
    a = t;
    while (x != 0)
    {
        while (a > x)
        {
            t = b - a;
            b = a;
            a = t;
            printf("%d", 0);
        }
        x -= a;
        t = b - a;
        b = a;
        a = t;
        printf("%d", 1);
    }
    return 0;
}  //fibonachi
