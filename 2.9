void dsort(char* str) {
     int * count = calloc(26, sizeof(int));
     int n = strlen(str);
     for (int i = 0; i < n; ++i)
         ++count[str[i] - 'a'];
     int curpos = 0;
     for (int i = 0; i < 26; ++i)
     {
         for (int j = 0; j < count[i]; ++j)
         {
             str[curpos] = 'a' + i;
             ++curpos;
         }
     }
     free(count);
}

